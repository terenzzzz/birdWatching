<!DOCTYPE html>
<html>
<title>Bird Profile Page</title>
<style></style>
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="stylesheet" href="/stylesheets/style.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC-ENULiIcN4gEjuDWK9S42fE2ljikToEw&callback=initMap" async defer></script>
<script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
<script src="/javascripts/socket.js" defer></script>
<script src="/javascripts/bird.js" defer></script>

<nav class="navbar mb-4">
  <div class="container-fluid">
    <button class="navbar-toggler fs-1" type="button" onclick="window.history.back()">
      <i class="bi bi-arrow-left"></i>
    </button>
  </div>
</nav>
<div class="form-group"></div>
<br />
<body onload="init()" class="bg-light bg-gradient container py-4">
<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 col-md-6 col-lg-4">
      <div class="mb-4 d-flex align-items-center justify-content-center">
        <img src="<%= sighting.photo.replace('public', '')%>" class="img-thumbnail" />
      </div>
    </div>
  </div>
</div>
<div class="card mb-4">
  <div class="card-body">
    <div class="bg-light p-4 d-flex justify-content-center text-center flex-wrap">
      <ul class="list-inline mb-0">
        <li class="list-inline-item mb-2 mb-md-0 mr-md-2">
          <button id="description_btn" class="btn btn-primary" class="hide">Description</button>
        </li>
        <li class="list-inline-item mb-2 mb-md-0 mr-md-2">
          <button id="comment_btn" class="btn btn-primary">Comment</button>
        </li>
        <li class="list-inline-item mb-2 mb-md-0 mr-md-2">
          <button id="location_btn" class="btn btn-primary">Location</button>
        </li>
        <li class="list-inline-item mb-2 mb-md-0 mr-md-2">
          <button id="identification_btn" class="btn btn-primary">Identification</button>
        </li>
      </ul>
    </div>
    <div id="description_text" class="px-2 py-2">
      <h5 class="mb-0">Description</h5>
      <div class="p-3 rounded shadow-sm bg-light">
        <p class="font-italic mb-0"><%=sighting.description%></p>
      </div>
    </div>
    <div id="comment_txt" class="p-2">
      <h5 class="mb-0">Comment</h5>

      <div id="initial_form" class="text-center" style="display: block;">
        <form onsubmit="return false;">
          <input type="text" id="name" placeholder="Nickname of user" name="name" />
          <p>
            <input type="text" id="roomNo" value="<%=sighting.id%>" name="roomNo" disabled="true" />
          </p>
          <button id="connect" class="btn text-light btn-primary btn-outline-success" onclick="connectToRoom()">Join Chat</button>
        </form>
      </div>
      <div id="chat_window" class="shadow-sm bg-light" style="display: none;">
        <div id="chat_interface" style="display: none;">
          <div id="history" class="boxed"></div>
          <div id="input" class="bottom boxed">
            <div>
              <ul id="chat-messages"></ul>
            </div>
          </div>
        </div>
      </div>
      <form onsubmit="return false;" style="width: 100%;">
        <div class="input-group">

        <input type="text" id="chat_input" name="chat_input" style="display: none;" class="form-control" placeholder="Type your message here..." />
        <div class="input-group-append">

        <button style="display: none;" id="chat_send" class="btn btn-primary" onclick="sendChatText()">Send</button>
        </div>
        </div>
      </form>
    </div>

    <div id="location_text" class="px-2 py-2">
      <h5 class="mb-0">Location</h5>
      <div class="p-3 rounded shadow-sm bg-light">
        <div id="map"  style="  width: 100%; height: 600px;  margin: auto;"></div>

        <p id="lat" hidden="true" class="font-italic mb-0"><%=sighting.latitude%></p>
        <p id="long" hidden="true" class="font-italic mb-0"><%=sighting.longitude%></p>

      </div>
    </div>
    <div id="identification_txt" class="px-2 py-2">
      <h5 class="mb-0">Identification</h5>
      <div id="identification_txt" class="p-3 rounded shadow-sm bg-light">
        <p class="font-italic mb-0"><%=sighting.identification%></p>
      </div>
    </div>
    <div class="container-lg">
      <div class="py-4 px-4">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <h5 class="mb-0">Seen on: <%=sighting.dateTime%></h5>
        </div>
        <p class="text-muted">Recent users bla bla bla</p>
      </div>
    </div>

    <div>
      <a href="/bird/<%= sighting.id %>/edit" class="btn btn-secondary btn-md text-left">Edit Sighting</a>

      <a href="/index" class="btn btn-secondary btn-md text-left">Back to Home</a>
    </div>

    <br />
  </div>
</div>
</div>

</body>
</html>

<script>

  if (!sessionStorage.getItem("nickName")) {
    window.location.href = "/";
    alert("Please Field Your Nick Name.");
  }
  console.log(sessionStorage.getItem("nickName"));

  function initMap() {

    let lat = <%=sighting.latitude%>;
    let lng =  <%=sighting.longitude%>;
    let center ={lat: lat, lng: lng}
    let map = new google.maps.Map(document.getElementById('map'), {
      zoom: 9,
      center: center,
      draggable: true
    });
    var marker = new google.maps.Marker({
      position: center,
      map: map,
      title: 'Center'
    });
  }
</script>
